    <script>
        // 1. منع النسخ والقص واللصق
        document.addEventListener('copy', (e) => e.preventDefault());
        document.addEventListener('cut', (e) => e.preventDefault());
        document.addEventListener('paste', (e) => e.preventDefault());

        // 2. منع اختصارات الكيبورد (Ctrl+C, Ctrl+V, Ctrl+U, F12)
        document.onkeydown = function(e) {
            if (e.ctrlKey && (e.keyCode === 67 || e.keyCode === 86 || e.keyCode === 85 || e.keyCode === 73)) {
                return false;
            }
            if (e.keyCode === 123) { // F12
                return false;
            }
        };

        // 3. منع الضغط المطول على الهواتف (تعطيل القائمة)
        window.oncontextmenu = function(event) {
            event.preventDefault();
            event.stopPropagation();
            return false;
        };

        // توليد أشكال الخلفية
        const bg = document.getElementById('bgShapes');
        for (let i = 0; i < 15; i++) {
            const shape = document.createElement('div');
            shape.classList.add('floating-shape');
            const size = Math.random() * 50 + 10 + 'px';
            shape.style.width = size;
            shape.style.height = size;
            shape.style.left = Math.random() * 100 + 'vw';
            shape.style.animationDuration = Math.random() * 10 + 10 + 's';
            shape.style.animationDelay = Math.random() * 5 + 's';
            bg.appendChild(shape);
        }
    </script>
